[user]
    name = timwata
    email = webmaster@watatim.com

[color]
    status = auto
    diff = auto
    branch = auto
    interactive = auto
    grep = auto

[core]
    excludesfile = ~/.gitignore
    editor = vim

[alias]
    st = status
    sh = show
    br = branch
    ba = branch -a
    bm = branch --merged
    bn = branch --no-merged
    wc = whatchanged
    ls = log --stat
    lp = log -p
    log-graph = log --graph --date=short --pretty=format:'%Cgreen%h %cd %Cblue%cn %Creset%s'
    log-all = log --graph --all --color --pretty='%x09%h %cn%x09%s %Cred%d%Creset'
    dm = diff master
    dw = diff --color-words
    dc = diff --cached
    ds = diff --staged

[include]
    path = ~/.gitconfig_local
